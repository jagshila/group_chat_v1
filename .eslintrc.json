{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
		"jest": true

    },
    "extends": "standard",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
		"semi": [
			"error",
			"always"
		],
		"indent": [
			2,
			4
		],
		"eqeqeq": [
			"error",
			"always",
			{
				"null": "ignore"
			}
		],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"no-mixed-spaces-and-tabs": [
			"error",
			"smart-tabs"
		],
		"camelcase": "error",
		"comma-spacing": [
			"error",
			{
				"before": false,
				"after": true
			}
		],
		"key-spacing": [
			"error",
			{
				"afterColon": true
			}
		],
		"max-depth": [
			"error",
			7
		],
		"max-statements": [
			"error",
			50
		]
    }
}
